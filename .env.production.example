# Database Configuration (Neon/Vercel Postgres)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=production-secret-CHANGE-THIS-TO-STRONG-UUID
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/tmp # For temp storage if needed, but we use Cloudinary

# Cloudinary Configuration (REQUIRED)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS Configuration
# Add both Frontend and Admin Panel URLs, comma-separated if needed by your logic, or just the specific origin
CORS_ORIGIN=https://balaastratech.vercel.app

# Email Configuration (Resend)
RESEND_API_KEY=re_123456789
FROM_EMAIL=system@balaastra.tech
ADMIN_EMAIL=admin@balaastra.tech
ADMIN_PANEL_URL=https://admin.balaastra.tech
